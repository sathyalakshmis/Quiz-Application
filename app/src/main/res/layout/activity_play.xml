<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="@dimen/_300"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="@dimen/card_corner_2"
            app:cardElevation="@dimen/card_elevation"
            app:contentPadding="@dimen/card_content_padding_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tech_card"
                    android:layout_width="@dimen/box_width"
                    android:layout_height="@dimen/box_height"
                    app:cardBackgroundColor="@color/box_color_1"
                    app:cardCornerRadius="@dimen/card_corner_2"
                    app:cardElevation="@dimen/card_elevation"
                    app:contentPadding="@dimen/card_content_padding"
                    android:layout_marginTop="@dimen/margin_1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_100_width"
                            android:layout_height="@dimen/icon_100_height"
                            android:layout_gravity="center"
                            android:src="@drawable/technical" />

                        <TextView
                            android:id="@+id/technical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10"
                            android:gravity="center"
                            android:text="Technical"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_6"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/apti_card"
                    android:layout_width="@dimen/box_width"
                    android:layout_height="@dimen/box_height"
                    android:layout_marginTop="@dimen/_16"
                    app:cardBackgroundColor="@color/box_color_2"
                    app:cardCornerRadius="@dimen/card_corner_2"
                    app:cardElevation="@dimen/card_elevation"
                    app:contentPadding="@dimen/card_content_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_100_width"
                            android:layout_height="@dimen/icon_100_height"
                            android:layout_gravity="center"
                            android:src="@drawable/aptitude" />

                        <TextView
                            android:id="@+id/aptitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10"
                            android:gravity="center"
                            android:text="Aptitude"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_6"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/gk_card"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:layout_marginTop="@dimen/_16"
                    app:cardBackgroundColor="@color/box_color_3"
                    app:cardCornerRadius="@dimen/card_corner_2"
                    app:cardElevation="@dimen/card_elevation"
                    app:contentPadding="@dimen/card_content_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/icon_100_width"
                            android:layout_height="@dimen/icon_100_height"
                            android:layout_gravity="center"
                            android:src="@drawable/gk" />

                        <TextView
                            android:id="@+id/gk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10"
                            android:gravity="center"
                            android:text="GK"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_6"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/more_card"
                    android:layout_width="@dimen/box_width"
                    android:layout_height="@dimen/box_height"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/box_color_4"
                    app:cardCornerRadius="@dimen/card_corner_2"
                    app:cardElevation="@dimen/card_elevation"
                    app:contentPadding="@dimen/card_content_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/extra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_30"
                            android:gravity="center"
                            android:text="@string/more_topics"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_6"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>